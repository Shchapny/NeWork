<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diplom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LikeButton" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="backgroundTint">@color/background_feed</item>
        <item name="android:checkable">true</item>
        <item name="iconTint">@color/like_color_selector</item>
        <item name="icon">@drawable/like_selector</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginTop">@dimen/offset_entity</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="OtherButton" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="backgroundTint">@color/background_feed</item>
        <item name="android:checkable">true</item>
        <item name="iconTint">@color/other_color_selector</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginStart">@dimen/offset_entity</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/offset</item>
        <item name="boxCornerRadiusBottomStart">@dimen/offset</item>
        <item name="boxCornerRadiusTopEnd">@dimen/offset</item>
        <item name="boxCornerRadiusTopStart">@dimen/offset</item>
    </style>
</resources>